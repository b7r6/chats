{
  "compilerOptions": {
    "target": "ES2020", // Use an appropriate ECMAScript target version, such as ES2020
    "module": "CommonJS", // CommonJS module system for compatibility with Node.js
    "strict": true, // Enable all strict type checking options
    "esModuleInterop": true, // Enables emit interoperability with CommonJS and ES modules via creation of namespace objects for all imports
    "forceConsistentCasingInFileNames": true, // Disallow inconsistently-cased references to the same file
    "skipLibCheck": true, // Skip type checking of all declaration files
    "outDir": "dist", // Redirect output structure to the `dist` directory
    "rootDir": "src", // Specify the root directory of input files
    "resolveJsonModule": true, // Allow importing .json files
    "moduleResolution": "node", // Module resolution strategy, act like Node.js
    "allowJs": false, // Do not allow JavaScript files
    "noEmitOnError": true, // Do not emit outputs if any errors were reported
    "sourceMap": true, // Generate corresponding '.map' files for debugging
    "declaration": true, // Generate '.d.ts' declaration files
    "incremental": true, // Enable incremental compilation to speed up the build
    "lib": ["ES2020"] // Includes necessary libraries for the target
  },
  "include": ["src/**/*"], // Include all TypeScript files in the 'src' directory
  "exclude": ["node_modules", "**/*.spec.ts"] // Exclude test files and node_modules
}
